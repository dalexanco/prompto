{
  "manifest_version": 3,
  "name": "Prompto",
  "description": "A prompt to master you browser",
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      }
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "host_permissions": ["https://*/*"],
  "permissions": [
    "bookmarks",
    "tabs",
    "tabGroups",
    "activeTab",
    "notifications",
    "scripting"
  ]
}
